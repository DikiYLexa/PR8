<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="Weather App" 
        Height="700" 
        Width="900" 
        MinHeight="600" 
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">
    

    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" 
                          BlurRadius="40" 
                          Color="#E2E8F0" 
            Opacity="0.3"/>
    </Window.Effect>

    <Grid x:Name="MainGrid" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" 
            Background="#FFFFFF"
            Padding="25" 
            CornerRadius="0,0,30,30"
            BorderThickness="0,0,0,1"
            BorderBrush="#E2E8F0">
          
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

               
                <Border Grid.Column="0" 
                    Background="Transparent" 
                    VerticalAlignment="Center" 
                    Margin="0,0,20,0">
                    <Viewbox Width="28" Height="28">
                        <Canvas Width="24" Height="24">
                            <Path Data="M21 21L16.65 16.65M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" 
                                  Stroke="#64748B" 
                                StrokeThickness="2.5"
                                  StrokeLineJoin="Round"/>
                        </Canvas>
                    </Viewbox>
                </Border>

                <!-- Поле поиска -->
                <Border Grid.Column="1" 
                    Background="#F1F5F9" 
                    CornerRadius="14" 
                    Height="52"
                    Padding="1"
                    BorderThickness="0"
                    VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="15" 
                                      Color="#CBD5E1" 
                            Opacity="0.2"/>
                    </Border.Effect>

                    <TextBox x:Name="CityTextBox"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#1E293B" 
                        FontSize="16"
                         FontWeight="Medium"
                         VerticalContentAlignment="Center"
                         Padding="20,0"
                         CaretBrush="#3B82F6">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="13"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Border>

                
                <Button Grid.Column="2"
                    x:Name="SearchButton"
                    Content="НАЙТИ"
                    Click="SearchButton_Click"
                    Width="140"
                    Height="52"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#3B82F6" Offset="0"/>
                            <GradientStop Color="#0EA5E9" Offset="1"/>
                           
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Foreground>White</Button.Foreground>
                    <Button.FontSize>15</Button.FontSize>
                    <Button.FontWeight>SemiBold</Button.FontWeight>
                    <Button.BorderThickness>0</Button.BorderThickness>
                    <Button.Cursor>Hand</Button.Cursor>
                   
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="0"
                              BlurRadius="25"
                              Color="#3B82F6"
                              Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>

        
        <Border Grid.Row="1" 
            Background="Transparent" 
            Padding="30,25"
            Margin="0,-15,0,0">
            <Grid>
               
                <Border Background="#FFFFFF"
                    CornerRadius="25"
                    Opacity="1">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="30" 
                                      Color="#E2E8F0" 
                            Opacity="0.2"/>
                    </Border.Effect>
                </Border>

                <Grid Margin="25,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                   
                    <Border Grid.Column="0" 
                        Width="50" 
                        Height="50" 
                        Background="#F0F9FF" 
                        CornerRadius="12"
                        VerticalAlignment="Center">
                        <Viewbox Width="28" Height="28">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12 2C15.866 2 19 5.13401 19 9C19 14.25 12 22 12 22C12 22 5 14.25 5 9C5 5.13401 8.13401 2 12 2ZM12 6C10.3431 6 9 7.34315 9 9C9 10.6569 10.3431 12 12 12C13.6569 12 15 10.6569 15 9C15 7.34315 13.6569 6 12 6Z" 
                                      Fill="#0EA5E9"/>
                                
                            </Canvas>
                        </Viewbox>
                    </Border>

                    
                    <StackPanel Grid.Column="1" 
                            VerticalAlignment="Center" 
                            Margin="25,0,0,0">

                      
                        <TextBlock x:Name="LocationText" 
                               Text="Тюмень, Россия" 
                               FontSize="32" 
                               Foreground="#1E293B" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                        
                        <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="0,5,0,0">

                            
                            <Border Background="#F1F5F9" 
                                CornerRadius="12"
                                Height="46"
                                Width="200"
                                Padding="1"
                                VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                                  BlurRadius="10" 
                                                  Color="#CBD5E1"
                                                  Opacity="0.1"/>
                                </Border.Effect>

                                <ComboBox SelectionChanged="SelectDay" 
                                          Name="Days" 
                                          Width="200" 
                                          Height="30" 
                                          Background="#FFFFFF" 
                                          Foreground="#1E293B" 
                                          BorderBrush="#CBD5E1" 
                                          VerticalAlignment="Center"/>
                            </Border>

                            
                            <Button x:Name="UpdateButton"
                                Content="⟳"
                                Click="UpdateWeather" 
                                Width="46" 
                                Height="46" 
                                Margin="15,0,0,0" 
                                VerticalAlignment="Center">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                        <GradientStop Color="#0EA5E9" Offset="1"/> 
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Foreground>White</Button.Foreground>
                                <Button.FontSize>18</Button.FontSize>
                              
                                <Button.BorderThickness>0</Button.BorderThickness>
                                <Button.Cursor>Hand</Button.Cursor>
                                
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                                  BlurRadius="20" 
                                                  Color="#3B82F6"
                                                  Opacity="0.3"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        
        <Border Grid.Row="2" 
            Background="#FFFFFF" 
            Padding="30,18"
            Margin="30,10,30,15"
            CornerRadius="18">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" 
                              BlurRadius="20" 
                              Color="#E2E8F0" 
                    Opacity="0.15"/>
            </Border.Effect>

            <Grid x:Name="HeaderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.15*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                       Text="⏰ ВРЕМЯ" 
                       Foreground="#64748B"
                       FontSize="13" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,2"/>
                <TextBlock Grid.Column="1" 
                       Text="☁️ ПОГОДА" 
                       Foreground="#64748B"
                       FontSize="13" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,2"/>
                <TextBlock Grid.Column="2" 
                       Text="💧 ВЕРОЯТНОСТЬ ОСАДКОВ" 
                       Foreground="#64748B"
                       FontSize="13" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,2"/>
                <TextBlock Grid.Column="3" 
                       Text="💨 ВЛАЖНОСТЬ" 
                       Foreground="#64748B"
                       FontSize="13" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,2"/>
            </Grid>
        </Border>

        
        <ScrollViewer Grid.Row="3" 
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Margin="30,0,30,25"
                  Padding="0,0,0,5">
            <StackPanel x:Name="parent">
                <Border Background="#FFFFFF" 
                    CornerRadius="16" 
                    Margin="0,0,0,12"
                    Padding="0"
                    Opacity="0.95">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" 
                                      BlurRadius="15" 
                                      Color="#E2E8F0" 
                            Opacity="0.1"/>
                    </Border.Effect>

                    <Grid Height="70">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.15*"/>
                            <ColumnDefinition Width="0.4*"/>
                            <ColumnDefinition Width="0.25*"/>
                            <ColumnDefinition Width="0.2*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                            Background="#F8FAFC" 
                            CornerRadius="16,0,0,16">
                            <TextBlock Text="12:00"
                                   Foreground="#1E293B" 
                                   FontSize="15"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                        </Border>

                      
                        <Border Grid.Column="1"
                            Background="Transparent"
                            Padding="20,0">
                            <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="☀️"
                                       FontSize="22"
                                       Margin="0,0,15,0"/>
                                <TextBlock Text="Солнечно"
                                       Foreground="#1E293B" 
                                       FontSize="14"
                                       FontWeight="Medium"/>
                            </StackPanel>
                        </Border>

                        <!-- Осадки -->
                        <Border Grid.Column="2"
                            Background="Transparent">
                            <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="0"
                                       Foreground="#3B82F6" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="%"
                                       Foreground="#94A3B8" 
                                       FontSize="13"/>
                            </StackPanel>
                        </Border>

                        
                        <Border Grid.Column="3"
                            Background="Transparent"
                            CornerRadius="0,16,16,0">
                            <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="45"
                                       Foreground="#10B981" 
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="%"
                                       Foreground="#94A3B8" 
                                       FontSize="13"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        
        <Border Grid.Row="3"
            VerticalAlignment="Bottom"
            Background="Transparent"
            Padding="30,0,30,20">
            <TextBlock Text="Weather App © 2025"
                   Foreground="#94A3B8" 
                   FontSize="12"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"/>
        </Border>
    </Grid>
</Window>