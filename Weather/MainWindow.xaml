<Window x:Class="Weather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска города -->
        <Border Grid.Row="0" Background="#FF1A2B44" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Город:" 
                       Foreground="White" 
                       FontSize="16" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" 
                     x:Name="CityTextBox" 
                     Height="35" 
                     Background="White"
                     Foreground="Black"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Padding="10,0"/>

                <Button Grid.Column="2" 
                    x:Name="SearchButton"
                    Content="Найти" 
                    Click="SearchButton_Click"
                    Width="100" 
                    Height="35" 
                    Margin="15,0,0,0" 
                    Background="#FF2A7BDE" 
                    Foreground="White"
                    FontSize="14"/>
            </Grid>
        </Border>

        <!-- Заголовок с датой -->
        <Border Grid.Row="1" Background="#FF1A2B44" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock x:Name="LocationText" Text="Пермь, Россия" FontSize="20" Foreground="#FF8FA3C2"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <ComboBox SelectionChanged="SelectDay" 
                              Name="Days" 
                              Width="200" 
                              Height="30" 
                              Background="White"
                              Foreground="Black"
                              BorderBrush="#FF3A4B64"
                              VerticalAlignment="Center">
                        </ComboBox>

                        <Button Content="Обновить" 
                            Click="UpdateWeather" 
                            Width="100" 
                            Height="30" 
                            Margin="15,0,0,0" 
                            Background="#FF2A7BDE" 
                            Foreground="White"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Заголовки таблицы -->
        <Border Grid.Row="2" Background="#FF142031" Padding="10,5">
            <Grid x:Name="HeaderGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.15*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Время" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Погода" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="Осадки" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="Влажность" Foreground="#FF8FA3C2" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Область с прогнозом -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Name="parent" Margin="10"/>
        </ScrollViewer>
    </Grid>
</Window>
